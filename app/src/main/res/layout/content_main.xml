<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sliding_panel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingTop="?attr/actionBarSize"
    sothree:umanoPanelHeight="120dp"
    sothree:umanoShadowHeight="4dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_background"
            android:layout_width="201dp"
            android:layout_height="314dp"
            android:src="@drawable/dotted_retangle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.281"/>

        <ImageView
            android:id="@+id/icon_gallery"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="90dp"
            app:layout_constraintLeft_toLeftOf="@+id/iv_background"
            app:layout_constraintTop_toTopOf="@+id/iv_background"
            sothree:srcCompat="@android:drawable/ic_menu_gallery"
            android:layout_marginStart="32dp"/>

        <ImageView
            android:id="@+id/icon_camera"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="8dp"
            android:src="@android:drawable/ic_menu_camera"
            app:layout_constraintBottom_toBottomOf="@+id/icon_gallery"
            app:layout_constraintRight_toRightOf="@+id/iv_background"
            app:layout_constraintTop_toTopOf="@+id/icon_gallery"
            app:layout_constraintVertical_bias="1.0"
            android:layout_marginEnd="32dp"/>

        <TextView
            android:id="@+id/tv_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:text="from gallery"
            app:layout_constraintHorizontal_bias="0.358"
            app:layout_constraintLeft_toLeftOf="@+id/icon_gallery"
            app:layout_constraintRight_toRightOf="@+id/icon_gallery"
            app:layout_constraintTop_toBottomOf="@+id/icon_gallery"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/tv_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:text="from camera"
            app:layout_constraintHorizontal_bias="0.346"
            app:layout_constraintLeft_toLeftOf="@+id/icon_camera"
            app:layout_constraintRight_toRightOf="@+id/icon_camera"
            app:layout_constraintTop_toBottomOf="@+id/icon_camera"
            android:layout_marginEnd="8dp"/>

    </android.support.constraint.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/drawer_history"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_drawer_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_history"
            android:padding="8dp"
            android:gravity="start|top"/>
    </RelativeLayout>
</com.sothree.slidinguppanel.SlidingUpPanelLayout>





